    {
      "path": "pages/my/activity/attendance",
      "style": {
        "navigationBarTitleText": "我的出勤"
      }
    },
    {
      "path": "pages/my/activity/activities",
      "style": {
        "navigationBarTitleText": "我参加的活动"
      }
    },
    {
      "path": "pages/my/info/info",
      "style": {
        "navigationBarTitleText": "个人信息"
      }
    },
    {
      "path": "pages/my/notice/index",
      "style": {
        "navigationBarTitleText": "系统通知"
      }
    },
    {
      "path": "pages/my/notice/detail",
      "style": {
        "navigationBarTitleText": "通知详情"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "",
    "navigationBarBackgroundColor": "#FFFFFF",
    "backgroundColor": "#FFFFFF"
  },
  // 设置 TabBar
  "tabBar": {
    "color": "#B5B5B5",
    "selectedColor": "#92003F",
    "backgroundColor": "#fff",
    "borderStyle": "white",
    "list": [
      {
        "text": "首页",
        "pagePath": "pages/home/index",
        "iconPath": "static/tabs/home_default.png",
        "selectedIconPath": "static/tabs/home_selected.png"
      },
      {
        "text": "成员名单",
        "pagePath": "pages/member/index",
        "iconPath": "static/tabs/member_default.png",
        "selectedIconPath": "static/tabs/member_selected.png"
      },
      {
        "text": "我的",
        "pagePath": "pages/my/index",
        "iconPath": "static/tabs/my_default.png",
        "selectedIconPath": "static/tabs/my_selected.png"
      }
    ]
  }
